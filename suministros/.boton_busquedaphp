<!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <title>.::Vendor. Ares::..</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
        <script src="//code.jquery.com/jquery-1.10.2.js"></script>
		<script>
		
		function filtrar_items() {
				  var min_length = 2; 
				  var ref = $('#item_siesa').val();
				  if (ref.length >= min_length) {
					  $.ajax({
					  url: 'ajax_empleado.php',
					  type: 'POST',
					  data: {ref:ref},
					  success:function(data){
						  $('#resultados_s').show();
						  $('#resultados_s').html(data);
					  }
					  });	
				  } else {
						  $('#resultados_s').hide();
				  }
			  }
			  
			  function set_item(item) {
			  
				  $('#item_siesa').val(item);
				  $('#resultados_s').hide();
			  }
			  
			  function pasar_id(id)
			  {
				$('#rowid').val(id);
			  }
			  
			   function anular(e) {
          		tecla = (document.all) ? e.keyCode : e.which;
          		return (tecla != 13);
     			}
				
			  function cantidades(id)
			  {
					$.ajax({
					url: 'clases/ajax_inventario.php?rowid='+id+'',
					type: 'post',
						beforeSend: function () 
						{
							$("#inventario").html("Validando, espere por favor...");
						},
			
						success: function (response) 
						{
							$("#inventario").html(response);

						}
			
					});
				}

		</script>
    </head>
    <body>
        
        <div class="container" > 
            <div class="panel panel-primary">
              <div class="panel-heading">

                <h3 class="panel-title">Consulta de inventario</h3>
              </div>
              <div class="panel-body">
                <p>
               <label>Consultar por c&oacute;digo de item o descripci&oacute;n:</label>
              <input type="text" name="item_siesa" id="item_siesa" placeholder="Ingrese parámetro de búsqueda" autofocus class="form-control" onKeyUp="filtrar_items()" autocomplete="on" onkeypress="return anular(event)"/>
                 	<div id="resultados_s"></div>
                </p>                
              </div>
            </div>
        </div>
        <div id="resultados"></div>
        <div id="inventario"></div>
        
